

<% layout('/layouts/login') -%>

<% if (errors) { %>
    <% errors.forEach(function(errors) { %>
        
       
        <div class="alert alert-danger"> <h5><%= errors.msg %> </h5></div>
    
    <% }); %>
    <% }  %>



  <form method="POST" action="/updatepassword/<%=token %>">
    <div class="page-wrapper">
      
        <div class="page-content--bge5">
            <div class="container">
                <div class="login-wrap">
                    <div class="login-content">
                        <div class="login-logo">
                            <a href="#">
                                <img src="/images/icon/takeda.png" alt="Takeda CII">
                            </a>
                        </div>
                        <div class="login-form">
                           
                            <legend>Reset Password</legend>
                            <div class="form-group">
                              <label for="password">New Password</label>
                              <input class="form-control" type="password" name="password"  placeholder="New password" required autofocus="autofocus"/>
                            </div>
                            <div class="form-group">
                              <label for="confirm">Confirm Password</label>
                              <input class="form-control" type="password" name="cpassword" required placeholder="Confirm password"/>
                            </div>
                            <div class="form-group">
                              <button class="btn btn-primary" type="submit">Update Password</button>
                            </div>   
                     
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
				</form>